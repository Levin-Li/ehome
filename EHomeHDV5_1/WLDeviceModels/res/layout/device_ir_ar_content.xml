<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:background="@color/black"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/device_ar_stb_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/device_ir_STB"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/device_ar_air_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/device_cate_8"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/device_ar_general_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/device_ir_current"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/device_ar_contnet_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical" >
    </LinearLayout>

</LinearLayout>