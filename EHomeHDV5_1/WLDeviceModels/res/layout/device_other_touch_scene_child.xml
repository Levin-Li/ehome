<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/device_other_touch_scene_child_linearlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_gravity="center" 
    android:layout_weight="1"
    >
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_weight="1"
    android:orientation="vertical" >
        <LinearLayout
            android:id="@+id/device_other_touch_scene_child_linearlayout_background"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:gravity="center"
            android:background="@drawable/device_abstract_touch_device_background" >

            <ImageView
                android:id="@+id/device_other_touch_scene_child_linearlayout_imageview"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                 />
        </LinearLayout>

    <TextView
        android:id="@+id/device_other_touch_scene_child_linearlayout_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Main Page" />
    </LinearLayout>
</LinearLayout>