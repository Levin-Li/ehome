<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center" >
    
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="130dp"
	    android:orientation="vertical"
	    android:layout_gravity="center"
	    android:gravity="center">
	    <LinearLayout 
	    android:layout_width="250dp"
	    android:layout_height="0dp"
	    android:layout_weight="1"
	    android:orientation="horizontal"
	    android:padding="5dp">
	    <TextView 
	        android:id="@+id/cooker_pure_rice"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:text="精煮米饭"
	        android:padding="5dp"
	        android:textColor="@color/device_name_text_color"
	        android:gravity="center"></TextView>
	    <TextView 
	        android:id="@+id/cooker_quick_rice"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:text="快煮米饭"
	        android:padding="5dp"
	        android:textColor="@color/device_name_text_color"
	        android:gravity="center"></TextView>
	    <TextView 
	        android:id="@+id/cooker_grain_rice"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:text="五谷饭"
	        android:padding="5dp"
	        android:textColor="@color/device_name_text_color"
	        android:gravity="center"></TextView>
	</LinearLayout>
	<LinearLayout 
	    android:layout_width="250dp"
	    android:layout_height="0dp"
	    android:layout_weight="1"
	    android:orientation="horizontal">
	    <TextView
	        android:id="@+id/cooker_ribs_rice" 
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:text="排骨"
	        android:padding="5dp"
	        android:textColor="@color/device_name_text_color"
	        android:gravity="center"></TextView>
	    <TextView 
	       	android:id="@+id/cooker_soup"  
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:text="汤/粥"
	        android:padding="5dp"
	        android:textColor="@color/device_name_text_color"
	        android:gravity="center"></TextView>
	    <TextView 
	        android:id="@+id/cooker_cake" 
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:text="蛋糕"
	        android:padding="5dp"
	        android:textColor="@color/device_name_text_color"
	        android:gravity="center"></TextView>
	</LinearLayout>
	<LinearLayout 
	    android:layout_width="250dp"
	    android:layout_height="0dp"
	    android:layout_weight="1"
	    android:orientation="horizontal">
	    <TextView 
	        android:id="@+id/cooker_chickens" 
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:text="鸡鸭肉"
	        android:padding="5dp"
	        android:textColor="@color/device_name_text_color"
	        android:gravity="center"></TextView>
	    <TextView 
	       	android:id="@+id/cooker_beef" 
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:text="牛羊肉"
	        android:padding="5dp"
	        android:textColor="@color/device_name_text_color"
	        android:gravity="center"></TextView>
	    <TextView 
	       	android:id="@+id/cooker_bean"  
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:text="豆/蹄筋"
	        android:padding="5dp"
	        android:textColor="@color/device_name_text_color"
	        android:gravity="center"></TextView>
	</LinearLayout>
	</LinearLayout>
</LinearLayout>
