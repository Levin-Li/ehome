<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:padding="10dp">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center">

        <com.yuantuo.customview.seekcircle.SeekCircle
            android:id="@+id/device_aus_dimming_light_sc"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/device_aus_on_tv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/device_button_common_bn"
            android:gravity="center"
            android:text="@string/default_progress_on"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/device_aus_process_tv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/device_button_common_bn"
            android:gravity="center"
            android:text="@string/default_progress"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/device_aus_off_tv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/device_button_common_bn"
            android:gravity="center"
            android:text="@string/default_progress_off"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:visibility="gone" />
    </FrameLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:id="@+id/device_aus_scene_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/device_other_touch_scene_child_backbind"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/device_aust_scene_iv"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/device_light_module_scene" />
    </LinearLayout>

    <TextView
        android:id="@+id/device_aus_scene_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:text="changjing" />


</LinearLayout>
