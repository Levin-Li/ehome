<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/add_devices_background"
    android:orientation="vertical">

    <include layout="@layout/titlebar_cat_eye_configuration" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_eagle_wifi_ssid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_eagle_wifi_ssid"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:drawableLeft="@drawable/icon_wifi_cateye_name"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:hint="这是WIFI名称"
                android:textColor="@color/gray"
                android:textSize="@dimen/v2_normal_size" />

            <ImageView
                android:id="@+id/iv_wifi_choose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_wifi_setting_choose" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="4dp"
            android:background="@color/grey_2"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/ll_wifi_set_input_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="25dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_eagle_wifi_key"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:drawableLeft="@drawable/icon_wifi_cateye_key"
                android:drawablePadding="10dp"
                android:hint="@string/setting_input_wifi_pwd"
                android:inputType="textPassword"
                android:textColor="@color/gray"
                android:textSize="@dimen/v2_normal_size" />

            <ImageView
                android:id="@+id/iv_wifi_key_set_visiblely"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/share_delete_confirm"
                android:src="@drawable/icon_wifi_key_gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_line_no_password"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="4dp"
            android:background="@color/grey_2" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/cb_no_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="@string/cateye_no_wifi_paassword_hint"
        android:textColor="@color/v5_gray_dark" />

    <TextView
        android:id="@+id/iot_setting_wifi_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:gravity="center_horizontal"
        android:text="@string/tv_wifi_cateye_configuration_note"
        android:textColor="@color/grey_1"
        android:textSize="@dimen/v2_small_size" />

    <Button
        android:id="@+id/btn_cateye_wifi_configuration_sure"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/monitor_camera_ensure"
        android:text="@string/device_connect_wifi"
        android:textSize="@dimen/v2_normal_size" />

</LinearLayout>
