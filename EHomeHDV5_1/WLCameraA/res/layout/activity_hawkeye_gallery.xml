<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/eagle_green" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/back_from_gallery_hawk"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/btn_back_white_default" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="图库"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >
        </LinearLayout>
    </LinearLayout>

    <RadioGroup
        android:id="@+id/rg_gallery_hawk"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/rb_picture_hawk"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/eagle_table_selector_bg"
            android:button="@null"
            android:checked="false"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/picture"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/rb_videotape_hawk"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/eagle_table_selector_bg"
            android:button="@null"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/videotape"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/rb_infrared_alarm_hawk"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/eagle_table_selector_bg"
            android:button="@null"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/cateye_human_detection_videotape"
            android:textSize="12sp" />
    </RadioGroup>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_gallery_hawk"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </android.support.v4.view.ViewPager>

</LinearLayout>