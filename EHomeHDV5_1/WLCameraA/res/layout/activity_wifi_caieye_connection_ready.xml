<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/add_devices_background"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/v5_green_light_areas_scan"
        android:gravity="center_vertical" >
        <include layout="@layout/titlebar_cat_eye_configuration"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/iot_ready_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="10dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/cat_eyea_camera"
        android:contentDescription="@string/week_thu"/>

    <TextView
        android:id="@+id/iot_ready_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/cateye_wifiSetting_hint"
        android:textColor="@color/gray" />

    <Button
        android:id="@+id/btn_cateye_connection_sure"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/monitor_camera_ensure"
        android:text="@string/common_sure" />

</LinearLayout>