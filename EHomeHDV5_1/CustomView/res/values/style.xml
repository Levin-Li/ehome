<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="CMWidget" />

    <style name="CMWidget.View" />

    <style name="CMWidget.ImageView" />

    <style name="CMWidget.TextView" parent="@android:style/TextAppearance">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CMWidget.EditText" parent="@android:style/Widget.EditText" />

    <style name="CMWidget.EditText.Dark">
        <item name="android:background">@drawable/edit_text_holo_dark</item>
    </style>

    <style name="CMWidget.EditText.Light">
        <item name="android:background">@drawable/edit_text_holo_light</item>
    </style>

    <style name="CMWidget.RadioButton" parent="@android:style/Widget.CompoundButton.RadioButton"></style>

    <style name="CMWidget.GridView" />

    <style name="CMWidget.ProgressBar" />

    <style name="TextAppearance">
        <item name="textSize">14sp</item>
        <item name="textStyle">normal</item>
    </style>

    <style name="CMWidget.ImageButton" parent="@android:style/Widget.ImageButton" />

    <style name="CMWidget.ImageButton.Clear">
        <item name="android:background">@null</item>
        <item name="android:src">@drawable/btn_clear_selector</item>
    </style>

    <style name="CMWidget.Button" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/btn_selector</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="CMWidget.Button.Dialog">
        <item name="android:background">@drawable/list_selector_holo_light</item>
    </style>

    <style name="CMWidget.Button.Dialog.v4">
        <item name="android:background">@drawable/dialog_button_v4_background</item>
        <item name="android:textColor">@drawable/dialog_button_v4_textcolor</item>
    </style>

    <style name="CMWidget.Button.Keyboard">
        <item name="android:background">@drawable/btn_pwd_selector</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Large</item>
    </style>

    <style name="CMWidget.Button.Keyboard.Password">
        <item name="android:background">@drawable/edittext_door_pwd_check_selector</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:textColor">@color/holo_blue_light</item>
    </style>

    <style name="CMWidget.Listview" parent="@android:style/Widget.ListView">
        <item name="android:divider">@drawable/listview_divider</item>
        <item name="android:listSelector">@drawable/list_selector_holo_light</item>
        <item name="android:cacheColorHint">@null</item>
        <item name="android:dividerHeight">@dimen/dividerHeight</item>
        <!-- This attribute is deprecated and will be ignored as of API level 14 (ICE_CREAM_SANDWICH) -->
        <item name="android:fadingEdge">none</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_marginTop">@dimen/adapterview_default_margin</item>
        <item name="android:layout_marginBottom">@dimen/adapterview_default_margin</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="CMWidget.Listview.ActionPopMenu">
        <item name="android:divider">?android:attr/listDivider</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="CMWidget.CheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/btn_check_holo_dark</item>
    </style>
    
    <style name="CMWidget.CheckBox.Dark" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/btn_check_holo_dark_v5</item>
    </style>

    <style name="CMWidget.CheckBox.Light">
        <item name="android:button">@drawable/btn_check_holo_light</item>
    </style>

    <style name="CMWidget.CheckBox.Empty">
        <item name="android:button">@null</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CMWidget.Switch">
        <item name="track">@drawable/switch_track_selector</item>
        <item name="thumb">@drawable/switch_thumb_selector</item>
        <item name="switchTextAppearance">@style/TextAppearance</item>
        <item name="textOn">@string/switch_on</item>
        <item name="textOff">@string/switch_off</item>
        <item name="thumbTextPadding">12dip</item>
        <item name="switchMinWidth">96dip</item>
        <item name="switchPadding">16dip</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="CMWidget.CustomCornerView">
        <item name="cornerType">single</item>
        <item name="itemIcon">@null</item>
        <item name="switchShow">true</item>
        <item name="cornerTitle">@null</item>
        <item name="cornerTitleColor">@android:color/black</item>
        <item name="cornerSummary">@null</item>
        <item name="cornerSummaryColor">@android:color/black</item>
        <item name="nextGuideIcon">@null</item>
        <item name="android:checked">false</item>
    </style>

    <style name="CMWidget.TabView">
        <item name="indicator">@drawable/tab_indicator_holo</item>
        <item name="tabDivider">@drawable/divider_holo</item>
        <item name="tabLayout">@layout/tab_indicator</item>
    </style>

    <style name="CMWidget.TabView.TabText">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">2</item>
        <item name="android:maxWidth">180dp</item>
    </style>

    <style name="CMWidget.NumberPicker">
        <item name="android:orientation">vertical</item>
        <item name="android:fadingEdge">vertical</item>
        <item name="android:fadingEdgeLength">50dip</item>
        <item name="solidColor">@android:color/transparent</item>
        <item name="selectionDivider">@drawable/np_numberpicker_selection_divider</item>
        <item name="selectionDividerHeight">2dip</item>
        <item name="internalMinWidth">64dip</item>
        <item name="internalMaxHeight">120dip</item>
        <item name="virtualButtonPressedDrawable">@drawable/item_background_holo_light</item>
        <item name="wheelItemCount">3</item>
    </style>

    <style name="CMWidget.Dialog">
        <item name="internalLayout">@layout/for_dialog</item>
    </style>

    <style name="CMWidget.Dialog.V4">
        <item name="internalLayout">@layout/for_dialog_v4</item>
    </style>

    <style name="customDialogNoBack" parent="@android:Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:background">#00ffffff</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/trant</item>
    </style>

    <!-- V5 -->
    <!-- Dialog button 样式 -->
    <style name="CMWidget.Button.Dialog.V5" parent="@android:style/Widget.Button">
        <item name="android:textColor">#719e19</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/dialog_btn_height</item>
        <item name="android:layout_weight">1</item>
    </style>

</resources>