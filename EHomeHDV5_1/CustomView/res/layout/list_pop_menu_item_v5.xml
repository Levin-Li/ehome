<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/action_pop_menu_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="164dp"
    android:orientation="vertical"
    android:paddingTop="20dp" >

    <LinearLayout
        android:id="@+id/title_template"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:paddingBottom="10dp" >

        <TextView
            android:id="@id/alertTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="@dimen/action_popmenu_icon_height"
            android:textColor="#6EA31D"
            android:textSize="20sp"
            android:visibility="gone" />
    </LinearLayout>

    <com.yuantuo.customview.ui.CustomListView
        android:id="@id/action_pop_menu_list"
        style="@style/CMWidget.Listview.ActionPopMenu"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </com.yuantuo.customview.ui.CustomListView>

    <LinearLayout
        android:id="@+id/bottom_template"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone" >

        <TextView
            android:id="@+id/alertbottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="@dimen/action_popmenu_icon_height"
            android:text="@string/menu_item_bottom"
            android:textColor="#6EA31D"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>