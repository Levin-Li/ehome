<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/white" 
    android:layout_marginTop="2dp">

    <TextView
        android:id="@+id/device_new_door_lock_setting_item_project_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingLeft="25dp"
        android:textColor="#000000"
        android:textSize="16sp" />

    <ImageView
        android:visibility="invisible"
        android:layout_centerVertical="true"
        android:id="@+id/device_new_door_lock_setting_item_imgview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingRight="10dp"
        android:src="@drawable/arrow_cutover_gateway" />

    <TextView
        android:visibility="invisible"
        android:id="@+id/device_new_door_lock_setting_item_bind_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/device_new_door_lock_setting_item_imgview"
        android:paddingRight="30dp"
        android:text="@string/device_no_bind"
        android:textColor="#000000"
        android:textSize="16sp" />
    
    <ToggleButton
        android:layout_toLeftOf="@id/device_new_door_lock_setting_item_imgview"
        android:paddingRight="30dp"
        android:visibility="gone"
        android:id="@+id/device_new_door_lock_setting_item_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:button="@drawable/button_toggle_switch"
        android:checked="false"
        android:text=""
        android:textOff=""
        android:textOn=""/>

</RelativeLayout>