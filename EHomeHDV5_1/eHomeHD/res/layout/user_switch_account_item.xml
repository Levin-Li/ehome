<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:gravity="center_vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:background="@drawable/account_manager_switch_account_item_selector"
    android:orientation="horizontal" >

    <TextView
        android:textSize="20sp"
        android:id="@+id/user_switch_account_item_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical"
        android:layout_weight="1"
        android:textColor="@color/black"
        android:text="id"
        android:gravity="left" />

    <ImageView
        android:id="@+id/user_switch_account_item_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:background="@drawable/switch_account_mark_selected"
        android:visibility="invisible" />

</LinearLayout>