<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/content_margin_6" >

    <ImageView
        android:id="@+id/user_icon"
        android:layout_width="@dimen/view_min_height_small"
        android:layout_height="@dimen/view_min_height_small"
        android:layout_marginTop="@dimen/content_margin_big_mid"
        android:layout_marginBottom="@dimen/content_margin_big_mid"
        android:background="@drawable/head_icon" >
    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/content_margin_6" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:singleLine="true"
                android:maxEms="7"
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:textColor="@android:color/black" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right" >

                <TextView
                    android:id="@+id/publish_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:text="publishtime"
                    android:textColor="@android:color/black" />

                <ImageView
                    android:id="@+id/hidden_del"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:src="@drawable/wl_menu_del_selector" >
                </ImageView>
            </FrameLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/social_content"
            style="@android:style/TextAppearance.Medium"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:gravity="bottom"
            android:singleLine="true"
            android:textColor="@android:color/black" />
    </LinearLayout>

</LinearLayout>