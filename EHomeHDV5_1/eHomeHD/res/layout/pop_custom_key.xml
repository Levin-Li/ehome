<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    
     <LinearLayout
        android:id="@+id/lin_selct_above"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_above="@+id/lin_selct_blew"
        android:gravity="center_horizontal"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/custom_key_pop_bg"
        android:orientation="vertical" >
        <TextView
            android:id="@+id/tv_rename"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/LimeGreen" />
        <TextView
            android:id="@+id/tv_binding"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/LimeGreen" />
    </LinearLayout>
    
    
    <LinearLayout
        android:id="@+id/lin_selct_blew"
        android:layout_width="match_parent"
         android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/custom_key_pop_bg"
        android:gravity="center" >

        <TextView
            android:id="@+id/tv_cancel_custom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/LimeGreen" />
    </LinearLayout>

   

</RelativeLayout>