<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:padding="10dp" >

        <Button
            android:id="@+id/device_mini_geteway_led_light_button"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/device_one_wried_wireless_input_btn_pressed"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/device_mini_light" />

        <Button
            android:id="@+id/device_mini_geteway_led_voice_button"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/device_one_wried_wireless_output_btn_normal"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/device_mini_voice" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/device_mini_geteway_led_voice_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="9"
        android:orientation="vertical"
        android:visibility="gone" >

        <RelativeLayout
            android:id="@+id/mini_gateway_voice_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:text="@string/miniGW_Device_Sound_Tracks"
                android:textColor="#222222"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/imageview"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:background="@drawable/submenu_normal" />

            <TextView
                android:id="@+id/voice_list_choose_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:layout_toLeftOf="@id/imageview"
                android:text="@string/set_titel"
                android:textColor="#222222"
                android:textSize="16sp" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="@string/miniGW_Volume_adjustment"
            android:textColor="#222222"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/device_mini_geteway_led_voice_size_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:gravity="center"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:layout_marginLeft="20dp" >

                <ImageView
                    android:id="@+id/device_mini_geteway_led_voice_min__btn"
                    android:padding="5dp"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/mini_gateway_voice_change_horn"
                    android:scaleType="fitXY" />
            </LinearLayout>

            <SeekBar
                android:id="@+id/device_mini_geteway_led_voice_seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:max="99"
                android:maxHeight="5dip"
                android:minHeight="5dip"
                android:progressDrawable="@drawable/seekbar_style"
                android:thumbOffset="0dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/device_mini_geteway_led_light_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="0.5"
            android:gravity="center|bottom"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/color_red_tv"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:gravity="center"
                android:src="@drawable/mini_geteway_voice_light_red"
                android:text="@string/miniGW_DeviceColor_Red_flames"
                android:textColor="#222222"
                android:textSize="10sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/color_purple_tv"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:gravity="center"
                android:src="@drawable/mini_geteway_voice_light_purple"
                android:text="@string/miniGW_DeviceColor_Romantic_purple"
                android:textColor="#222222"
                android:textSize="10sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/color_blue_tv"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:gravity="center"
                android:src="@drawable/mini_geteway_voice_light_blue"
                android:text="@string/miniGW_DeviceColor_Quiet_blue"
                android:textColor="#222222"
                android:textSize="10sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/color_cyan_tv"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:gravity="center"
                android:src="@drawable/mini_geteway_voice_light_cyan"
                android:text="@string/miniGW_DeviceColor_Science_green"
                android:textColor="#222222"
                android:textSize="10sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/color_yellow_tv"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:gravity="center"
                android:src="@drawable/mini_geteway_voice_light_yellow"
                android:text="@string/miniGW_DeviceColor_Mango_yellow"
                android:textColor="#222222"
                android:textSize="10sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/color_green_tv"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:gravity="center"
                android:src="@drawable/mini_geteway_voice_light_green"
                android:text="@string/miniGW_DeviceColor_Jade_green"
                android:textColor="#222222"
                android:textSize="10sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/color_white_tv"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:gravity="center"
                android:src="@drawable/mini_geteway_voice_light_white"
                android:text="@string/device_mini_light_color7"
                android:textColor="#222222"
                android:textSize="10sp"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/device__mini_geteway_led_light_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:gravity="center|top"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/color_red_imagview"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/mini_geteway_voice_light_red" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/color_purple_imagview"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/mini_geteway_voice_light_purple" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:visibility="gone"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/color_blue_imagview"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/mini_geteway_voice_light_blue" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/color_cyan_imagview"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/mini_geteway_voice_light_cyan" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/color_yellow_imagview"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/mini_geteway_voice_light_yellow" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/color_green_imagview"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/mini_geteway_voice_light_green" />
            </LinearLayout>








            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/color_white_imagview"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/mini_geteway_voice_light_white" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="9"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="vertical"
                android:weightSum="2" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/mini_geteway_light_mode_often_light"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/mini_geteway_light_mode_often_light" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/mini_geteway_light_mode_stream"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/mini_geteway_light_mode_stream" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="top"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/device_mini_light_mode0"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/device_mini_light_mode3"
                        android:textColor="@color/black"
                        android:textSize="20dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/mini_geteway_light_mode_fast_flash"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/mini_geteway_light_mode_fast_flash" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/mini_geteway_light_mode_slow_flash"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/mini_geteway_light_mode_slow_flash" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="top"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/miniGW_Device_Flash"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/miniGW_Device_Slow_flash"
                    android:textColor="@color/black"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/mini_geteway_light_mode_off"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/mini_geteway_light_mode_off" />
                </LinearLayout>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="top"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="OFF"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>