<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/announcement_item_seletor"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/more_wifi_item_SSID"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:textColor="@color/abs__background_holo_dark" />

    <FrameLayout
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:padding="13dp" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/wifi_scene_doit_bg" />

        <ImageView
            android:id="@+id/more_wifi_scene_doit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/wifi_scene_doit"
            android:visibility="invisible" />
    </FrameLayout>

</LinearLayout>