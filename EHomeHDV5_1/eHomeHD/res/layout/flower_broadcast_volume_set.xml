<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:id="@+id/set_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16.0dip"
        android:orientation="vertical" >
		<LinearLayout
		    android:paddingLeft="16dp"
		    android:paddingRight="16dp"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:background="@drawable/account_manager_switch_account_item_selector"
		    android:gravity="center_vertical"
		    android:orientation="horizontal" >
		    <TextView
		        android:id="@+id/item_switch_txt"
		        android:layout_width="0.0dip"
		        android:layout_height="wrap_content"
		        android:layout_weight="1.0"
		        android:ellipsize="end"		        
		        android:singleLine="true"
		        android:text="@string/gateway_dream_flower_broadcast_switch"
		        android:textColor="@color/black"
		        android:textSize="16.0sp"
		        android:visibility="visible" />
		
		    <ToggleButton
		        android:id="@+id/item_switch_btn"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="15.0dip"
		        android:layout_marginRight="-15.0dip"
		        android:background="@android:color/transparent"
		        android:button="@drawable/button_toggle_switch"
		        android:checked="false"
		        android:text=""
		        android:textOff=""
		        android:textOn=""
		        android:visibility="visible" />

		</LinearLayout>


        <LinearLayout
            android:id="@+id/set_sublayout"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16.0dip"
            android:orientation="vertical" >
				<LinearLayout
	    		    android:paddingLeft="16dp"
		    		android:paddingRight="16dp"
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:background="@drawable/account_manager_switch_account_item_selector"
				    android:gravity="center_vertical"
				    android:orientation="horizontal" >
				
				    <TextView
				        android:id="@+id/sub_item1_txt"
				        android:layout_width="0.0dip"
				        android:layout_height="wrap_content"
				        android:layout_weight="1.0"
				        android:ellipsize="end"
				        android:singleLine="true"
				        android:text="@string/gateway_dream_flower_broadcast"
				        android:textColor="@color/black"
				        android:textSize="16.0sp"
				        android:visibility="visible" />
				
				    <ToggleButton
				       android:id="@+id/set_sub_item1"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_marginLeft="15.0dip"
				        android:layout_marginRight="-15.0dip"
				        android:background="@android:color/transparent"
				        android:button="@drawable/button_toggle_switch"
				        android:checked="false"
				        android:text=""
				        android:textOff=""
				        android:textOn=""
				        android:visibility="visible" />
				    </LinearLayout>
				<LinearLayout
	    		    android:paddingLeft="16dp"
		    		android:paddingRight="16dp"
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:background="@drawable/account_manager_switch_account_item_selector"
				    android:gravity="center_vertical"
				    android:orientation="horizontal" >
				
				    <TextView
				        android:id="@+id/item_txt"
				        android:layout_width="0.0dip"
				        android:layout_height="wrap_content"
				        android:layout_weight="1.0"
				        android:ellipsize="end"
				        android:singleLine="true"
				        android:text="@string/gateway_dream_flower_network_connection_prompt"
				        android:textColor="@color/black"
				        android:textSize="16.0sp"
				        android:visibility="visible" />
				
				    <ToggleButton
				        android:id="@+id/set_sub_item2"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_marginLeft="15.0dip"
				        android:layout_marginRight="-15.0dip"
				        android:background="@android:color/transparent"
				        android:button="@drawable/button_toggle_switch"
				        android:checked="false"
				        android:text=""
				        android:textOff=""
				        android:textOn=""
				        android:visibility="visible" />	
				</LinearLayout>
				<LinearLayout
				    android:paddingLeft="16dp"
		    		android:paddingRight="16dp"
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:background="@drawable/account_manager_switch_account_item_selector"
				    android:gravity="center_vertical"
				    android:orientation="horizontal" >
				
				    <TextView
				        android:id="@+id/sub_item3_txt"
				        android:layout_width="0.0dip"
				        android:layout_height="wrap_content"
				        android:layout_weight="1.0"
				        android:ellipsize="end"
				        android:singleLine="true"
				        android:text="@string/gateway_dream_flower_auxiliary_prompt"
				        android:textColor="@color/black"
				        android:textSize="16.0sp"
				        android:visibility="visible" />
				
				    <ToggleButton
				        android:id="@+id/set_sub_item3"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_marginLeft="15.0dip"
				        android:layout_marginRight="-15.0dip"
				        android:background="@android:color/transparent"
				        android:button="@drawable/button_toggle_switch"
				        android:checked="false"
				        android:text=""
				        android:textOff=""
				        android:textOn=""
				        android:visibility="visible" />
		
				</LinearLayout>		       
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/volume_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/set_layout"
        android:layout_marginTop="32.0dip"
        android:background="@drawable/account_manager_item_background"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/min_volume_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_ir_stb_key_mute_normal" />

        <SeekBar
            android:id="@+id/volume_seekbar"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:max="100"
            android:padding="8.0dip"
            android:progress="50" />

        <ImageButton
            android:id="@+id/max_volume_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/monitor_speaker_on_pressed" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/volume_layout"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="16.0dip" >

        <Button
            android:id="@+id/audition_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/flower_button_bg"
            android:paddingLeft="72.0dip"
            android:paddingRight="72.0dip"
            android:text="@string/gateway_dream_flower_voice_audition" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16.0dip"
            android:gravity="center"
            android:text="@string/gateway_dream_flower_voice_test_hint"
            android:textColor="@color/black"
            android:textSize="12.0sp" />
    </LinearLayout>

</RelativeLayout>