        android:layout_height="0dp"
        android:layout_weight="6"
        android:orientation="vertical"
        android:paddingLeft="25dp"
        android:paddingRight="25dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:minHeight="@dimen/view_min_height"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/monitorLinkageDeviceTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/monitor_cloud_1_area"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <Spinner
                android:id="@+id/monitor_Areaname_Choose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/monitor_edittext_background"
                android:minHeight="@dimen/view_min_height_small"
                android:singleLine="true"
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:minHeight="@dimen/view_min_height"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/monitorNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="@string/monitor_name"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <cc.wulian.smarthomev5.view.WLEditText
                android:id="@+id/monitorNameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
