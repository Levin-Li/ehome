                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/content_margin_big"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/monitor_hard_disk_video_camera_4"
                    android:textColor="@color/black" />

                <ImageView
                    android:id="@+id/dvr_4_imageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#6ea31d"
                    android:minHeight="4dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/camera_type_dvr_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/content_margin_big"
