<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="250dip"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_hour"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center"
            android:text="@string/device_adjust_second_common"
            android:textSize="20sp"
            android:textColor="@color/black" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#6EA31D" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center" >

           <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal" >

                <com.yuantuo.customview.ui.wheel.WheelView
                    android:id="@+id/wheelView1"
                    android:layout_width="0dip"
                    android:layout_height="250dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1.0" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent" >

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="135dip"
                    android:background="#6EA31D" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:layout_below="@id/view1"
                    android:layout_marginTop="80dip"
                    android:background="#6EA31D" />
            </RelativeLayout>

        </FrameLayout>
    </LinearLayout>
	<ImageView
            android:layout_width="wrap_content"
            android:layout_height="250dip"
            android:layout_gravity="center"
            android:src="@drawable/scene_timing_line" />

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="250dip"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_minues"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center"
            android:text="@string/device_led_ms"
            android:textSize="20sp"
            android:textColor="@color/black" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#6EA31D" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal" >

                <com.yuantuo.customview.ui.wheel.WheelView
                    android:id="@+id/wheelView2"
                    android:layout_width="0dip"
                    android:layout_height="250dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1.0" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent" >

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="135dip"
                    android:background="#6EA31D" />
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:layout_below="@id/view3"
                    android:layout_marginTop="80dip"
                    android:background="#6EA31D" />
            </RelativeLayout>

        </FrameLayout>
        </LinearLayout>

</LinearLayout>
