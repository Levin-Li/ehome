<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/v5_gray_light"
      android:orientation="vertical"
      android:paddingTop="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/account_manager_item_red_background"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fancoil_house_tv_state"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/floor_feating_housekeeper_status"
            android:textColor="#454545"
            android:textSize="20sp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/fancoil_house_on_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/fancoil_house_state_on_pre"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/fancoil_house_off_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/fancoil_house_state_off_pre"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical">

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/account_manager_item_red_background"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fancoil_house_tv_fan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/device_module_mode"
            android:textColor="#454545"
            android:textSize="20sp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical">
                <ImageButton
                    android:id="@+id/fancoil_house_heat_btn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/fancoil_house_mode_hot_pre"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical">
                <ImageButton
                    android:id="@+id/fancoil_house_cool_btn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/fancoil_house_mode_cool_pre"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical">
                <ImageButton
                    android:id="@+id/fancoil_house_fan_btn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/fancoil_house_mode_fan_pre"/>
            </LinearLayout>



        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/fancoil_house_temp_layout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/account_manager_item_red_background">

        <TextView
            android:id="@+id/fancoil_house_tv_temp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/device_tempure"
            android:textColor="#454545"
            android:textSize="20sp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingRight="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingLeft="12dp">

                <TextView
                    android:id="@+id/fancoil_house_seekbar_temp_progress"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="10.0â„ƒ"
                    android:textColor="#709E17"
                    android:textSize="12sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                >

                <SeekBar
                    android:id="@+id/fancoil_house_seekbar_temp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="44"
                    android:maxHeight="10dp"
                    android:minHeight="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:progressDrawable="@drawable/thermost_setting_diff_seekbar_style"
                    android:thumb="@drawable/thermost_housekeeper_piont"
                    android:thumbOffset="0dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fancoil_house_cool_temp_c"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:visibility="invisible">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="10"
                    android:textSize="15sp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="16"
                    android:textSize="15sp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="22"
                    android:textSize="15sp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="27"
                    android:textSize="15sp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="32"
                    android:textSize="15sp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/account_manager_item_red_background"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fancoil_house_tv_fan_speed"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/central_air_conditioning_wind_speed"
            android:textColor="#454545"
            android:textSize="20sp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/fancoil_house_fan_low_btn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/fancoil_house_fan_low_pre"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/fancoil_house_fan_mid_btn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/fancoil_house_fan_mid_pre"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/fancoil_house_fan_high_btn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/fancoil_house_fan_high_pre"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/fancoil_house_fan_auto_btn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/fancoil_house_fan_auto_pre"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/floor_heating_set_housekeeper_wind_speed"/>

    </LinearLayout>

</LinearLayout>

