<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/device_mini_know_wifi_relay"
        android:id="@+id/imageView4"
        android:layout_marginBottom="44dp"
        android:layout_above="@+id/textView7"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:hint="@string/miniGW_doFollowVoicd"
        android:textColor="#000000"
        android:textSize="15sp"
        android:id="@+id/textView7"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/mini_gateway_wifi_scan_connect_fail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:text="@string/miniGW_tryRelayAgain"
        android:textColor="@color/action_bar_bg"
        android:textSize="15sp"
        android:layout_alignParentBottom="true"/>

    <LinearLayout
        android:id="@+id/mini_gateway_wifi_scan_connect_succeed"
        android:layout_width="290dp"
        android:layout_height="45dp"
        android:background="@color/action_bar_bg"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_alignBottom="@+id/mini_gateway_wifi_scan_connect_fail"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="47dp">

        <ImageView
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:src="@drawable/minigatewayscanrelayconnect" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:textColor="@color/white"
            android:text="@string/miniGW_RelaySuccess"
            android:id="@+id/textView8"
            android:layout_marginRight="26dp"/>

    </LinearLayout>
</RelativeLayout>