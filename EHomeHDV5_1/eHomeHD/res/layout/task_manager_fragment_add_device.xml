<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >


    <LinearLayout
        android:id="@+id/house_keeper_task_select_device_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/house_keeper_rule_task_edit_name_img"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/house_keeper_send_message_device_textview"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:textColor="#5c5c5c"
            android:textSize="15sp"
            android:visibility="gone" />

        <FrameLayout
            android:id="@+id/house_keeper_task_select_send_message_device_layout"
            android:layout_width="match_parent"
            android:layout_height="45dp" >

            <TextView
                android:id="@+id/house_keeper_task_select_send_message_device_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/fragement_device_area_add"
                android:gravity="center"
                android:text="@string/house_rule_select_send_message_device"
                android:textColor="#5c5c5c"
                android:textSize="15sp" />
        </FrameLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:paddingLeft="10dp"
        android:text="@string/house_rule_send_message_in_name"
        android:textColor="#878787"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/house_keeper_task_custom_message_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:text="@string/house_rule_detected"
        android:textColor="#5c5c5c"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/house_keeper_task_custom_message_edit_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:background="@drawable/house_keeper_rule_task_edit_name_img" >

        <EditText
            android:id="@+id/house_keeper_task_custom_message_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textCursorDrawable="@drawable/et_cus_black_cursor"
            android:textColor="#5c5c5c"
            android:background="@null"
            android:textColorHint="#dcdcdc"
            android:singleLine="true"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/house_keeper_custom_message_toggle_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/house_keeper_rule_task_edit_name_img"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/house_keeper_custom_message_type_textview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/home_return_message_titel"
            android:textColor="#C6C6C6"
            android:textSize="15sp" />

        <ToggleButton
            android:id="@+id/house_keeper_custom_message_toggle_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:button="@drawable/button_toggle_switch"
            android:checked="false"
            android:textOff=""
            android:textOn="" />
    </LinearLayout>

</LinearLayout>