<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:weightSum="4"
    android:orientation="vertical" >
 	<include layout="@layout/titlebar_mini_gateway_configuration" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:layout_marginTop="50dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@drawable/gatewayrelaydefea" />
    
        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gateway_router_setting_wifi_relay_failure"
            android:textColor="@color/black"
            android:textSize="20dp" />
 
    <Button
        android:id="@+id/device_sxgateway_relay_connect_fail_bt"
        android:layout_width="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="220dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="@string/gateway_router_setting_wifi_Relay_connect_retry_hint"
        android:padding="10dp"
        android:background="@drawable/background_green"
        android:textSize="20dp" />
    </LinearLayout>

</LinearLayout>