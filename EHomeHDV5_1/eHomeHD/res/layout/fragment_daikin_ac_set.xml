<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/device_daikinac_custom_progressbar_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="20dp" >

            <cc.wulian.app.model.device.impls.controlable.thermostat_cooperation.CooMyArcProgressBar
                android:id="@+id/device_daikinac_custom_arcprogressbar"
                android:layout_width="210dp"
                android:layout_height="210dp"
                android:background="@drawable/device_thermost_temp_bg_2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:orientation="vertical" >

            <Button
                android:id="@+id/device_daikinac_custom_get_temp"
                android:layout_width="wrap_content"
                android:layout_height="30sp"
                android:layout_gravity="center"
                android:background="@drawable/device_thermost_cur_temp" />

            <TextView
                android:id="@+id/device_daikinac_custom_current_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/device_thermost_cur_temp" />
            <TextView
                android:id="@+id/device_daikinac_custom_set_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:layout_marginTop="20dp"
                android:ellipsize="end"
                android:maxLength="15"
                android:singleLine="true"
                android:text="@string/device_set_tempure" />
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="280dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_daikin_valve" />

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:src="@drawable/icon_daikin_ac_wind" />

            <LinearLayout
                android:layout_width="270dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_wind_volume_1"
                    android:layout_width="0dp"
                    android:layout_height="18dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:src="@drawable/icon_daikin_wind_util_2" />

                <ImageView
                    android:id="@+id/iv_wind_volume_2"
                    android:layout_width="0dp"
                    android:layout_height="18dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:src="@drawable/icon_daikin_wind_util_2" />

                <ImageView
                    android:id="@+id/iv_wind_volume_3"
                    android:layout_width="0dp"
                    android:layout_height="18dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:src="@drawable/icon_daikin_wind_util_2" />

                <ImageView
                    android:id="@+id/iv_wind_volume_4"
                    android:layout_width="0dp"
                    android:layout_height="18dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:src="@drawable/icon_daikin_wind_util_2" />

                <ImageView
                    android:id="@+id/iv_wind_volume_5"
                    android:layout_width="0dp"
                    android:layout_height="18dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:src="@drawable/icon_daikin_wind_util_2" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="280dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_daikin_valve" />

            <ImageView
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:src="@drawable/icon_daikin_direction" />

            <LinearLayout
                android:layout_width="290dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_wind_level"
                    android:layout_width="0dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:src="@drawable/icon_daikin_wind_right_1" />

                <ImageView
                    android:id="@+id/iv_wind_45"
                    android:layout_width="0dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:src="@drawable/icon_daikin_wind_right45" />

                <ImageView
                    android:id="@+id/iv_wind_below"
                    android:layout_width="0dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:src="@drawable/icon_daikin_wind_blew" />

                <ImageView
                    android:id="@+id/iv_wind_45xh"
                    android:layout_width="0dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:src="@drawable/icon_daikin_wind_auto" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="280dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_daikin_valve" />

            <TextView
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:gravity="center"
                android:text="M"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="290dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_model_heating"
                    android:layout_width="0dp"
                    android:layout_height="18dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:text="@string/daikin_airconditioner_heating"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_model_refrigeration"
                    android:layout_width="0dp"
                    android:layout_height="18dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:text="@string/daikin_airconditioner_refrigeration"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_model_dehumidification"
                    android:layout_width="0dp"
                    android:layout_height="18dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:text="@string/daikin_airconditioner_dehumidification"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_model_blowing"
                    android:layout_width="0dp"
                    android:layout_height="18dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:text="@string/daikin_airconditioner_blowing"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:gravity="center" >

        <Button
            android:id="@+id/device_daikinac_custom_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/device_musicbox_start_bg" />
    </LinearLayout>

</LinearLayout>