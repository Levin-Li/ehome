<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp" >

    <LinearLayout
        android:id="@+id/config_quick_edit_area_linear"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/announcement_item_seletor"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:ellipsize="end"
            android:padding="10dp"
            android:singleLine="true"
            android:text="@string/device_guide_join_gw_choose_area_hint"
            android:textColor="@color/v5_gray_dark" />

        <TextView
            android:layout_margin="5dp"
            android:id="@+id/config_quick_edit_area"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center|left"
            android:textSize="15sp"
            android:textColor="@color/v5_gray_dark"
            android:text="@string/device_config_edit_dev_area_type_other_default" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/abs__bright_foreground_holo_dark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:background="@drawable/announcement_item_seletor"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:ellipsize="end"
            android:padding="10dp"
            android:singleLine="true"
            android:text="@string/device_guide_join_gw_rename_hint"
            android:textColor="@color/v5_gray_dark" />

        <EditText
            android:layout_margin="5dp"
            android:id="@+id/config_quick_edit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:layout_gravity="center_horizontal"
            android:layout_weight="5"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="15sp"
            android:textCursorDrawable="@drawable/shape_text_grey_cursor"
            android:textColor="@color/v5_gray_dark" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/tv_quick_edit_look_device"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/explore_edit_device_details"
            android:textSize="18sp"
            android:textColor="#66000000"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="50dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/config_quick_edit_commit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/epgbottom_textcolor"
            android:gravity="center"
            android:text="@string/device_ir_title_next"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>