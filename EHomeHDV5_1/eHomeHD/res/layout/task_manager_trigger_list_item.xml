<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:orientation="horizontal"
    android:paddingBottom="8dp"
     >
    
    <FrameLayout
        android:layout_width="match_parent"
        android:id="@+id/task_manager_trigger_item_framelayout"
        android:layout_height="50dp">
        <Button
            android:id="@+id/task_manager_trigger_item_delete"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_gravity="right|center_vertical"
            android:background="@color/red"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="@string/device_config_edit_dev_area_create_item_delete"
            android:textColor="@color/white" />
    <LinearLayout 
        android:id="@+id/task_manager_trigger_item_layout"
        android:layout_width="match_parent"
    	android:layout_height="50dp"
    	android:orientation="vertical"
    	android:longClickable="true"
		android:background="@color/white">
		<LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="49dp"
		    android:orientation="horizontal"
		    android:gravity="center">
		    <LinearLayout 
	        android:layout_width="0dp"
	        android:layout_weight="6"
	    	android:layout_height="match_parent"
	    	android:orientation="vertical"
	    	android:gravity="center">
		<LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="0dp"
		    android:layout_weight="1"
		    android:gravity="center"
		    android:orientation="horizontal"
		    >
		    <TextView 
		        android:id="@+id/task_manager_trigger_item_name"
		        android:paddingLeft="5dp"
			    android:layout_width="0dp"
			    android:layout_weight="0.5"
			    android:textColor="#5c5c5c"
			    android:layout_height="wrap_content"/>
			<TextView 
				android:id="@+id/task_manager_trigger_item_status"
			     android:layout_width="0dp"
			    android:layout_weight="0.8"
			    android:textColor="#5c5c5c"
			    android:layout_height="wrap_content"/>
		</LinearLayout>
		<LinearLayout 
		    android:id="@+id/task_manager_trigger_item_weekday_layout"
		    android:layout_width="match_parent"
		    android:layout_height="0dp"
		    android:layout_weight="1"
		    android:orientation="horizontal"
		    >
		    <!-- <TextView 
		        android:id="@+id/task_manager_trigger_item_weekday"
		        android:paddingLeft="5dp"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:text="周日"/> -->
		</LinearLayout>
	    </LinearLayout>

    <LinearLayout
        android:id="@+id/task_manager_trigger_item_imv"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="right"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="5dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/arrow_cutover_gateway" />
    </LinearLayout>
		</LinearLayout>
	<View 
	    android:layout_width="match_parent"
	    android:layout_height="0.5dp"
	    android:background="@color/v5_gray_mid"/>
    </LinearLayout>
    </FrameLayout>
</LinearLayout>
