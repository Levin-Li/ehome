<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/setting_time_voice"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/v5_gray_light"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingTop="5dp" >

    <LinearLayout
        android:id="@+id/setting_manager_item_set_voice_yy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
           android:background="@drawable/account_manager_switch_account_item_selector"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/setting_manager_item_name_ly"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="left|center_vertical" >

            <TextView
                android:id="@+id/setting_time_voice_yy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:ellipsize="end"
                android:gravity="center_vertical|left"
                android:singleLine="true"
                android:text="@string/set_sound_notification_voice_prompt"
                android:textColor="#222222"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="right|center_vertical" >

            <ImageView
                android:id="@+id/setting_time_voice_image_yy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:onClick="onClick"
                android:src="@drawable/mini_gateway_voice_choose_item"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/setting_manager_item_set_voice_dd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
           android:background="@drawable/account_manager_switch_account_item_selector"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/setting_manager_item_name_l"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left|center_vertical" >

            <TextView
                android:id="@+id/setting_time_voice_dd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:ellipsize="end"
                android:gravity="center_vertical|left"
                android:onClick="onClick"
                android:singleLine="true"
                android:text="@string/miniGW_DeviceVoice_Didi"
                android:textColor="#222222"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="right|center_vertical" >

            <ImageView
                android:id="@+id/setting_time_voice_image_dd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:onClick="onClick"
                android:src="@drawable/mini_gateway_voice_choose_item"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/setting_manager_item_set_voice_bd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
           android:background="@drawable/account_manager_switch_account_item_selector"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left|center_vertical" >

            <TextView
                android:id="@+id/setting_time_voice_bd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:ellipsize="end"
                android:gravity="center_vertical|left"
                android:singleLine="true"
                android:text="@string/miniGW_DeviceVoice_fluctuation"
                android:textColor="#222222"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="right|center_vertical" >

            <ImageView
                android:id="@+id/setting_time_voice_image_bd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:onClick="onClick"
                android:src="@drawable/mini_gateway_voice_choose_item"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/setting_manager_item_set_voice_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
           android:background="@drawable/account_manager_switch_account_item_selector"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left|center_vertical" >

            <TextView
                android:id="@+id/setting_time_voice_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:ellipsize="end"
                android:gravity="center_vertical|left"
                android:singleLine="true"
                android:text="@string/miniGW_DeviceVoice_Cuckoo"
                android:textColor="#222222"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="right|center_vertical" >

            <ImageView
                android:id="@+id/setting_time_voice_image_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:onClick="onClick"
                android:src="@drawable/mini_gateway_voice_choose_item"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>