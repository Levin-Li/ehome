<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_gravity="center_vertical"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="@drawable/account_manager_item_background" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
         >

        <ImageView
            android:id="@+id/house_link_add_task_device_icon_iv"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/device_co2_normal" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/house_link_add_task_device_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ellipsize="end"
	            android:singleLine="true"
                android:gravity="left|center_vertical"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/house_link_add_task_device_area_tv"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ellipsize="end"
	            android:singleLine="true"
                android:gravity="left|center_vertical"
                android:textColor="@color/v5_green_dark" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center_vertical" >
            <ImageView 
                android:id="@+id/house_link_add_task_device_sub_img"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/task_manager_sub_link_item_number"
                android:padding="8dp"
                android:visibility="invisible"
                />
            <TextView 
                android:id="@+id/house_link_add_task_device_number_tv"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/task_manager_link_item_number_bg"
                android:text="3"
                android:gravity="center"
                android:textColor="@color/black"
                android:visibility="invisible"
                />
             <ImageView 
                 android:id="@+id/house_link_add_task_device_add_img"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:src="@drawable/task_manager_add_link_item_number"/>
        </LinearLayout>
</LinearLayout>
</LinearLayout>