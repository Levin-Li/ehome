<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:weightSum="4" >

    <include layout="@layout/titlebar_mini_gateway_configuration" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/gatewayrelaysuccess" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
           android:text="@string/gateway_router_setting_wifi_relay_success"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <Button
            android:id="@+id/device_sxgateway_relay_connect_succeed_bt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="220dp"
            android:background="@drawable/background_green"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="@color/white"
            android:text="@string/common_ok"
            android:textSize="20dp" />
    </LinearLayout>

</LinearLayout>