<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
	<RelativeLayout 
	    android:id="@+id/more_add_device_ll"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@drawable/add_device_view"
	    android:layout_marginTop="30dp">
	    
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="20dp"
	        android:textColor="#000000"
	        android:layout_centerVertical="true"
	        android:text="@string/more_nfc_function_dev_new_equipment"/>
	    
	    <TextView 
	        android:id="@+id/more_add_device"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginRight="30dp"
	        android:textColor="#000000"
	        android:layout_centerVertical="true"
	        android:text="@string/more_nfc_function_dev_add"
	        android:layout_alignParentRight="true"/>
	</RelativeLayout>
	
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_marginTop="10dp"
	    android:layout_marginLeft="15dp"
	    android:layout_marginRight="15dp"
	    android:layout_weight="1"
	    android:minHeight="60dp"
	    android:id="@+id/device_content"
	    android:orientation="vertical">
	     
	</LinearLayout>
</LinearLayout>
