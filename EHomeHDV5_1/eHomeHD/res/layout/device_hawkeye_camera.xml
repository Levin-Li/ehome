<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/hawkeye_videoView_relative"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible" >

        <com.tutk.IOTC.MediaCodecMonitor
            android:id="@+id/monitor_eagle"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        
        <LinearLayout
                 android:id="@+id/lin_videotape_time_hawk"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                  android:layout_alignParentTop="true"
                 android:layout_centerInParent="true"             
                 android:visibility="gone" >
                 
                 <ImageView 
                     android:id="@+id/iv_videotape_time_hawk"
                     android:layout_width="10dp"
                     android:layout_height="10dp"
                     android:layout_marginRight="5dp"
                     android:src="@drawable/light_videotape_1"/>
                 
                 <TextView 
                     android:id="@+id/tv_videotape_time_hawk"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textColor="@color/white"
                     android:textSize="13sp"
                     android:text="00:00:00"/>
                 
             </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@color/camera_setting_update_diaolg_background" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/iot_mapdepot"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/hawklockon" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/iot_eagle_snapshot"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/eagle_icon_snapshot" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/iot_eagle_record"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/eagle_icon_videotape" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/iot_eagle_set"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/eagle_icon_album" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/iot_eagle_speak"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="35dp"
            android:src="@drawable/eagle_icon_speak" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/hawkeye_lockon_line"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:background="#e0000000"
        android:visibility="gone" >

        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right" 
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >
            
           <ImageView 
               android:id="@+id/lock_back_image"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" 
                         
               android:src ="@drawable/lock_back_hawkeye" 
               
               />
            
            </LinearLayout>
        
        
        <LinearLayout
            android:id="@+id/passwordfild"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="45dp"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1" >

                <Button
                    android:id="@+id/password1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/ic_action_tick_on" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1" >

                <Button
                    android:id="@+id/password2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/ic_action_tick_on" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <Button
                    android:id="@+id/password3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/ic_action_tick_on" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1" >

                <Button
                    android:id="@+id/password4"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/ic_action_tick_on" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1" >

                <Button
                    android:id="@+id/password5"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/ic_action_tick_on" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1" >

                <Button
                    android:id="@+id/password6"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/ic_action_tick_on" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/k_layout1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/one"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:layout_marginRight="40dp"
                    android:background="@drawable/ic_action_tick_on"
                    android:text="1"
                    android:textColor="@drawable/button_font_style"
                    android:textSize="35sp" />

                <Button
                    android:id="@+id/two"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:background="@drawable/ic_action_tick_on"
                    android:text="2"
                    android:textColor="@drawable/button_font_style"
                    android:textSize="35sp" />

                <Button
                    android:id="@+id/three"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:layout_marginLeft="40dp"
                    android:background="@drawable/ic_action_tick_on"
                    android:text="3"
                    android:textColor="@drawable/button_font_style"
                    android:textSize="35sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/k_layout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="21dp"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/four"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:layout_marginRight="40dp"
                    android:background="@drawable/ic_action_tick_on"
                    android:text="4"
                    android:textColor="@drawable/button_font_style"
                    android:textSize="35sp" />

                <Button
                    android:id="@+id/five"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:background="@drawable/ic_action_tick_on"
                    android:text="5"
                    android:textColor="@drawable/button_font_style"
                    android:textSize="35sp" />

                <Button
                    android:id="@+id/six"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:layout_marginLeft="40dp"
                    android:background="@drawable/ic_action_tick_on"
                    android:text="6"
                    android:textColor="@drawable/button_font_style"
                    android:textSize="35sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/k_layout3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="21dp"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/seven"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:layout_marginRight="40dp"
                    android:background="@drawable/ic_action_tick_on"
                    android:text="7"
                    android:textColor="@drawable/button_font_style"
                    android:textSize="35sp" />

                <Button
                    android:id="@+id/eight"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:background="@drawable/ic_action_tick_on"
                    android:text="8"
                    android:textColor="@drawable/button_font_style"
                    android:textSize="35sp" />

                <Button
                    android:id="@+id/nine"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:layout_marginLeft="40dp"
                    android:background="@drawable/ic_action_tick_on"
                    android:text="9"
                    android:textColor="@drawable/button_font_style"
                    android:textSize="35sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/k_layout4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="21dp"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/del"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:layout_marginRight="40dp"
                    android:background="@drawable/ic_action_tick_on"
                    android:onClick="zero"
                    android:text="C"
                    android:textColor="@drawable/button_font_style"
                    android:textSize="35sp" />

                <Button
                    android:id="@+id/zero"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:background="@drawable/ic_action_tick_on"
                    android:onClick="del"
                    android:text="0"
                    android:textColor="@drawable/button_font_style"
                    android:textSize="35sp" />

                <Button
                    android:id="@+id/ok"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:layout_marginLeft="40dp"
                    android:background="@drawable/ic_action_tick_on"
                    android:onClick="ok"
                    android:text="*"
                    android:textColor="@drawable/button_font_style"
                    android:textSize="35sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>