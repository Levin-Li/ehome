<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3" >

            <EditText
                android:id="@+id/router_setting_pwd_new_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/account_sigin_records_background"
                android:ellipsize="end"
                android:gravity="left|center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:password="true"
                android:singleLine="true"
                android:maxLength="63"
                android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:hint="@string/gateway_router_setting_wifi_modify_pwd_new"
                android:textSize="10dp"
                android:textCursorDrawable="@null"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/router_setting_pwd_visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:paddingRight="20dp"
                android:src="@drawable/dm_router_setting_wifi_pwd_invisibale" />
        </FrameLayout>
       
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
     <TextView 
         android:id="@+id/password_remind_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="@string/gateway_router_setting_password_hint"
            android:textSize="10sp"
            android:visibility="invisible"
            android:textColor="@color/black"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3" >

            <EditText
                android:id="@+id/router_setting_pwd_new_name_true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/account_sigin_records_background"
                android:ellipsize="end"
                android:gravity="left|center_vertical"
                android:maxLength="63"
                android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:hint="@string/set_account_manager_modify_gw_password_sure"
                android:textSize="10dp"
                android:password="true"
                android:singleLine="true"
                android:textCursorDrawable="@null"
                android:textColor="@color/black" />
            <ImageView
                android:id="@+id/router_setting_pwd_visible_true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:paddingRight="20dp"
                android:src="@drawable/dm_router_setting_wifi_pwd_invisibale" />
        </FrameLayout>
    </LinearLayout>
 <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
     <TextView 
         	android:id="@+id/password_is_error_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="@string/gateway_router_setting_password_authentication_error"
            android:textSize="10dp"
            android:visibility="invisible"
            android:textColor="@color/black"/>
        </LinearLayout>
</LinearLayout>