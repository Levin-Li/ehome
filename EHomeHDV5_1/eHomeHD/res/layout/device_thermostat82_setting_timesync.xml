<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_normal"
    android:paddingLeft="15dp"
    android:orientation="vertical" >
    
     <TextView 
       android:id="@+id/thermost_setting_sync_tv3"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:padding="10dp"
       android:textColor="@color/v5_gray_font"
       android:textSize="15sp"/>
      <TextView 
       android:layout_width="match_parent"
       android:layout_height="1dp"
       android:background="#e4e5e8"/>
    
   <TextView 
       android:id="@+id/thermost_setting_sync_tv1"
       android:layout_width="match_parent"
       android:layout_height="40dp"
       android:padding="10dp"
       android:textColor="@color/v5_gray_font"
       android:textSize="15sp"/>
   <TextView 
       android:layout_width="match_parent"
       android:layout_height="1dp"
       android:background="#e4e5e8"/>
   <TextView 
       android:id="@+id/thermost_setting_sync_tv2"
       android:layout_width="match_parent"
       android:layout_height="40dp"
       android:padding="10dp"
       android:textColor="@color/v5_gray_font"
       android:textSize="15sp"/>
    
    <Button 
        android:id="@+id/thermost_setting_sync_btn"
        android:layout_width="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_height="25dp"
        android:textSize="15sp"
        android:gravity="center"
        android:background="@drawable/thermost_setting_send_btn_selector"/>
    

</LinearLayout>