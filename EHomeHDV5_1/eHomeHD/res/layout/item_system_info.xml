<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/systemInfoItemTextView"
        style="@style/CMWidget.TextView.Normal"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center_vertical"
        android:minHeight="@dimen/action_popmenu_min_height"
        android:paddingLeft="?attr/listPreferredItemPaddingLeft"
        android:textColor="@drawable/text_color_highlight" />

    <LinearLayout
        android:id="@+id/systemInfoViewLinearLayout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="right|center_vertical"
        android:orientation="horizontal"
        android:paddingRight="?attr/listPreferredItemPaddingRight" >
    </LinearLayout>

</LinearLayout>