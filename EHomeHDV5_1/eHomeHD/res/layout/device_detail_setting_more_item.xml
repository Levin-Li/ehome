<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/device_details_menu_item_background"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:fitsSystemWindows="false"
    android:paddingBottom="8dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="8dp" >

    <ImageView
        android:id="@+id/device_setting_more_icon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:fitsSystemWindows="false"
        android:src="@drawable/device_setting_more_delate" />

    <TextView
        android:id="@+id/device_setting_more_title_text"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:fitsSystemWindows="false"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:singleLine="true"
        android:text="123456789"
        android:textColor="@color/black" />

    <ImageView
        android:id="@+id/device_setting_more_icon_right"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/device_setting_more_delate"
        android:visibility="gone" />

</LinearLayout>