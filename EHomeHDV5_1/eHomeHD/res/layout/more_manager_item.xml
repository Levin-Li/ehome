<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/more_manager_item"
    android:layout_width="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:layout_height="55dp"
    android:background="@drawable/account_manager_item_background"
     >

    <ImageView
        android:id="@+id/more_manager_item_name_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/more_manager_item_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/more_manager_item_name_iv"
        android:gravity="center_vertical|left"
        android:textColor="#222222"
        android:textSize="20sp" />

    <ToggleButton
        android:id="@+id/more_manager_item_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:background="@android:color/transparent"
        android:button="@drawable/button_toggle_switch"
        android:checked="false"
        android:text=""
        android:textOff=""
        android:textOn=""
        android:focusable="false"
        android:clickable="true"
        android:visibility="gone" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="10dp" >

        <ImageView
            android:id="@+id/more_manager_item_info_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="15dp" />
    </FrameLayout>

</RelativeLayout>