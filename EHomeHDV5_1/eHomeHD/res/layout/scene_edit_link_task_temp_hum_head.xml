<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingRight="10dp" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/scene_linkage"
        android:textColor="@color/black" />
	<LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingLeft="10dp" >

        <TextView
            android:id="@+id/scene_link_task_temp_unit_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:text="@string/device_tempure"
            android:textColor="@color/v5_green_dark"
             />
        <TextView
            android:id="@+id/scene_link_task_humidity_unit_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:text="@string/device_humidity"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/scene_link_task_sensor_unit_compare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=">"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/scene_link_task_sensor_unit_value"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:background="@drawable/scene_edit_text_bg"
            android:minWidth="50dp"
            android:numeric="integer"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/scene_link_task_sensor_unit_signal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="PPM"
            android:textColor="@color/black" />
    </LinearLayout>

</LinearLayout>