<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/titlebar_mini_device_gateway_help" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="15sp"
            android:text="@string/minigw_channel_conflict_introduction"/>
        <RelativeLayout
            android:id="@+id/close_mini_gateway_route"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="9dp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:text="@string/minigw_close_the_mini_route"
                android:textColor="@color/transparent_deeper"
                android:textSize="18dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/minigatewayarrows"
                android:layout_marginTop="20dp" />
        </RelativeLayout>
        <View
              android:layout_width="match_parent"
                android:layout_height="1dp"
             android:background="@color/whitegray"></View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="10dp"
            android:text="@string/minigw_modify_the_channel"
            android:background="@color/white"
            android:textColor="@color/transparent_deeper"
            android:textSize="18dp"
            android:layout_marginBottom="9dp"
            android:id="@+id/textView" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/whitegray"></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:orientation="horizontal"
            android:background="@color/white">
        <TextView
            android:id="@+id/channel_conflict_help_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="@string/minigw_technical_support"
            android:textColor="@color/transparent_deeper"
            android:textSize="18dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>