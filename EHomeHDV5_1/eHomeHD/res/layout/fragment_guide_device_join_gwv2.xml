<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout android:id="@+id/layout_addZigbee"
        android:layout_width="match_parent"
        android:layout_margin="30dp"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/white"
        android:clickable="true">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/task_manager_add_link_item_number"
            android:scaleType="center"
            android:clickable="false"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/list_item_msg_divider"
            android:textSize="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:clickable="false"
            android:text="@string/add_device_zigbee"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_opacity_white"
            android:textSize="15dp"
            android:layout_marginTop="5dp"
            android:clickable="false"
            android:text="@string/add_device_zigbee_notes"/>
    </LinearLayout>
    <LinearLayout android:id="@+id/layout_addWifi"
        android:layout_width="match_parent"
        android:layout_margin="30dp"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/white"
        android:clickable="true">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/task_manager_add_link_item_number"
            android:scaleType="center"
            android:layout_marginBottom="5dp"
            android:clickable="false"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/list_item_msg_divider"
            android:textSize="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:clickable="false"
            android:text="@string/add_device_wifi"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_opacity_white"
            android:textSize="15dp"
            android:layout_marginTop="5dp"
            android:clickable="false"
            android:text="@string/add_device_wifi_notes"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#00000000"

        android:layout_weight="0.2"/>
</LinearLayout>