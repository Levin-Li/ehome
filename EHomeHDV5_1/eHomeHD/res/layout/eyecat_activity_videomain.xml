<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_videocall"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#191919"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/frame_surfaceview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"

       >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:weightSum="1">
                <LinearLayout
                    android:id="@+id/linear_padding"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    />

                <SurfaceView
                    android:id="@+id/surface_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>
        </RelativeLayout>
    </FrameLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:visibility="visible"
        android:layout_marginLeft="30dp"
        >
        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="15dp"
            android:orientation="horizontal"
            android:background="@drawable/icon_mybattery"
            >
            <ImageView
                android:id="@+id/level_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/barry_green"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                />
            <ImageView
                android:id="@+id/level_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/barry_green"
                android:layout_marginLeft="2dp"
                android:layout_gravity="center_vertical"
                />
            <ImageView
                android:id="@+id/level_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:src="@drawable/barry_green"
                android:layout_gravity="center_vertical"
                />
            <ImageView
                android:id="@+id/level_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/barry_green"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"
                />
            <ImageView
                android:id="@+id/level_five"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/barry_green"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/battery_status_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"
            android:text="100%"
            android:textSize="8sp"
            android:textColor="@color/white"
            />
    </LinearLayout>
    <FrameLayout
        android:id="@+id/choose_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="bottom"
            android:background="#070707"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"

            >
            <FrameLayout
                android:id="@+id/btn_lock"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="bottom"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/icon_lock" />
            </FrameLayout>
            <FrameLayout
                android:id="@+id/btn_mute"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/iv_mute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_mute_on"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    />
            </FrameLayout>
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="10dp"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/btn_soundSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_talkback"
                    />
            </FrameLayout>
            <FrameLayout
                android:id="@+id/btn_capture"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/icon_cap" />
            </FrameLayout>
            <FrameLayout
                android:id="@+id/btn_hangupCall"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1">
                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/icon_hangup" />
            </FrameLayout>
        </LinearLayout>

    </FrameLayout>



</FrameLayout>