<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/setting_update_diaolg_background"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingBottom="40dp"
    android:paddingTop="20dp"
    >
     <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/update_percent_tv"  
        android:text="0%"
        android:textSize="40sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        ></TextView>

     <ProgressBar
         android:id="@+id/update_progress_bar"
         style="@style/setting_update_progressbar_horizontal_style"
         android:layout_width="match_parent"
         android:layout_height="15dp"
         android:background="@color/trant"
         android:visibility="visible" />
   
</LinearLayout>
