<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
	<LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:minHeight="60dp"
    	android:orientation="horizontal"
    	android:gravity="center"
    	android:id="@+id/setting_control_permission_layout_item"
    	android:paddingLeft="10dp"
    	android:paddingRight="10dp"
    	android:background="@color/white">
    	<ImageView 
	    android:id="@+id/task_manager_list_item_imv"
	    android:paddingTop="3dp"
	    android:paddingBottom="3dp"
	    android:layout_width="70dp"
	    android:layout_height="70dp"
	    android:src="@drawable/setting_control_permission_imageview"
	    android:gravity="center"/>
    	<LinearLayout 
    	    android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:orientation="vertical"
    		android:gravity="center">
    	    <TextView 
    	        android:id="@+id/setting_contro_permission_usename"
    	        android:layout_width="match_parent"
    	        android:layout_height="wrap_content"
    	        android:textColor="@color/black"
    	        android:paddingLeft="15dp"/>
    	    <TextView 
    	        android:id="@+id/setting_contro_permission_status"
    	        android:layout_width="match_parent"
    	        android:layout_height="wrap_content"
    	        android:layout_marginTop="10dp"
    	        android:paddingLeft="15dp"/>
    	</LinearLayout>
   </LinearLayout>
   <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="35dp"
    	android:orientation="vertical"
    	android:gravity="center"
    	android:id="@+id/setting_control_permission_layout"
    	android:background="@color/white">
    	<View 
    	    android:layout_width="match_parent"
    	    android:layout_height="0.8dp"
    	    android:background="#878881"
    	    android:layout_marginLeft="15dp"
    	    android:layout_marginRight="15dp"
    	    android:layout_gravity="top"/>
    	<LinearLayout 
    	    android:layout_width="match_parent"
    	    android:layout_height="0dp"
    	    android:layout_weight="1"
    	    android:orientation="horizontal">
    	    <TextView 
    	        android:id="@+id/setting_contro_permission_reject"
    	        android:layout_width="0dp"
    	        android:layout_weight="1"
    	        android:layout_height="match_parent"
    	        android:text="@string/set_account_manager_permission_reject"
    	        android:gravity="center"
    	        android:textColor="@color/black"
    	        android:paddingLeft="15dp"/>
    	    <View 
	    	    android:layout_width="0.8dp"
	    	    android:layout_height="25dp"
	    	    android:background="#878881"
	    	    android:layout_marginTop="5dp"
	    	    android:layout_marginBottom="5dp"/>
    	    <TextView 
    	        android:id="@+id/setting_contro_permission_accept"
    	        android:layout_width="0dp"
    	        android:layout_weight="1"
    	        android:layout_height="match_parent"
    	        android:textColor="@color/black"
    	        android:gravity="center"
    	        android:text="@string/set_account_manager_permission_accept"/>
    	</LinearLayout>
       		
   </LinearLayout>
</LinearLayout>
