<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <View
        android:id="@+id/downup_menu_item_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/abs__background_holo_light" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/downup_menu_item_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/downup_menu_item_title_btn"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/announcement_item_seletor"
            android:text="@string/device_ir_title_menu"
            android:textColor="@color/v5_green_light"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>