<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal" >

    </LinearLayout>

    <include layout="@layout/titlebar_mini_device_general_"
        android:id="@+id/include2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/miniGW_setup_tips"
        android:textSize="14sp"
        android:id="@+id/textView9"
        android:layout_below="@+id/textView10"
        android:layout_alignLeft="@+id/textView10"
        android:layout_alignStart="@+id/textView10"
        android:layout_marginTop="13dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/miniGW_welcom_and_next"
        android:textSize="15sp"
        android:id="@+id/textView10"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/Ga"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/Ga"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:background="@drawable/device_mini_know_wifi_relay"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/textView11"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/device_mini_connect_net"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/action_bar_bg"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/house_rule_upgrade_timezone_setting_next_steps"
        android:textColor="@color/white"
        android:layout_marginBottom="31dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignStart="@+id/textView9"
        android:layout_alignRight="@+id/textView10"
        android:layout_alignEnd="@+id/textView10" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/miniGW_welcom_use"
        android:textColor="#3E3E3E"
        android:textSize="18sp"
        android:id="@+id/textView11"
        android:layout_marginTop="9dp"
        android:layout_below="@+id/include2"
        android:layout_centerHorizontal="true" />

</RelativeLayout>