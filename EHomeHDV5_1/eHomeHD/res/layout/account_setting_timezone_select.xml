<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingRight="8dp" >

        <EditText
            android:hint="@string/common_search"
            android:textColor="#222222"
            android:id="@+id/config_search_et"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/main_dialog_bg"
            android:clickable="true"
            android:padding="5dp"
            android:drawableLeft="@drawable/device_icon_search"
            android:focusable="true"
            android:inputType="text"
            android:maxLines="1"/>
    </LinearLayout>

    <cc.wulian.smarthomev5.view.AutoRefreshListView
        android:layout_marginTop="10dp"
        android:id="@+id/setting_zone_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="@color/transparent"
        android:divider="@color/v5_gray_mid"
        android:scrollbars="none" />
    
    <TextView 
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/gateway_timezone_no_result_hint"
        android:textColor="#222222"
        android:textSize="20sp"/>

</LinearLayout>