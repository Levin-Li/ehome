<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout
	    android:id="@+id/account_manager_current_time_item_ll"
	    android:layout_width="match_parent"
	    android:layout_height="60dp"
	    android:background="@drawable/account_manager_switch_account_item_selector"
	    android:gravity="center_vertical"
	    android:orientation="horizontal"
	    android:layout_marginTop="8dp"
	    android:paddingLeft="8dp"
	    android:paddingRight="8dp" >	            	
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_vertical|left"
            android:singleLine="true"
            android:text="@string/control_center_gateway_time"
            android:textColor="#222222"
            android:textSize="20sp" />	            	
        <TextView
            android:layout_marginRight="8dp"
            android:id="@+id/account_manager_current_time_tv"
            android:textSize="16sp"
            android:textColor="#222222"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:button="@drawable/button_toggle_switch"
            android:gravity="right|center_vertical"/>	
    </LinearLayout>
    
    <LinearLayout
	    android:id="@+id/account_manager_go_zone_list"
	    android:layout_width="match_parent"
	    android:layout_height="60dp"
	    android:background="@drawable/account_manager_switch_account_item_selector"
	    android:gravity="center_vertical"
	    android:orientation="horizontal"
	    android:layout_marginTop="10dp"
	    android:paddingTop="1dp"
	    android:paddingLeft="8dp"
	    android:paddingRight="8dp" >	            	
        <TextView
            android:id="@+id/account_manager_timezone_setting_textview"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_vertical|left"
            android:singleLine="true"
            android:text="@string/control_center_gateway_time_zone"
            android:textColor="#222222"
            android:textSize="20sp" />	
         <TextView
            android:id="@+id/account_manager_setting_curr_zone_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:gravity="center"
            android:textColor="@color/v5_green_light"
            android:textSize="16sp" />            	
       	<ImageView
       	    android:layout_marginLeft="8dp"
       	    android:layout_marginRight="8dp"
       	    android:layout_height="wrap_content"
       	    android:layout_width="wrap_content"
       	    android:src="@drawable/voice_remind_right"/>
    </LinearLayout>
    
    <LinearLayout
	    android:id="@+id/account_manager_high_grade_item_ll"
	    android:layout_width="match_parent"
	    android:layout_height="60dp"
	    android:background="@drawable/account_manager_switch_account_item_selector"
	    android:gravity="center_vertical"
	    android:orientation="horizontal"
	    android:layout_marginTop="10dp"
	    android:paddingTop="8dp"
	    android:paddingBottom="5dp"
	    android:paddingLeft="8dp"
	    android:paddingRight="8dp" >	            	
        <TextView
            android:id="@+id/account_manager_high_grade_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_vertical|left"
            android:singleLine="true"
            android:text="@string/device_module_advanced"
            android:textColor="#222222"
            android:textSize="20sp" />	
       	<ImageView
       	    android:paddingRight="8dp"
       	    android:layout_marginLeft="8dp"
       	    android:layout_height="wrap_content"
       	    android:layout_width="wrap_content"
       	    android:src="@drawable/voice_remind_right"/>
    </LinearLayout>
    <TextView 
        android:id="@+id/house_upgrade_timezone_remind"
	    android:textSize="14sp"
	    android:paddingLeft="8dp"
	    android:paddingTop="8dp"
	    android:paddingBottom="16dp"
	    android:text="@string/house_rule_upgrade_timezone_setting_remind"
	    android:visibility="gone"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"/>
    
</LinearLayout>