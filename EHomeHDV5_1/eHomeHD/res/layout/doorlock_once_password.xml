<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:weightSum="10" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:gravity="center"
            android:text="密      码:"
            android:textColor="#000000"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6.5"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/doorlock_password"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:background="@drawable/background"
                android:hint="请输入6~9位数字密码"
                android:inputType="textPassword"
                android:maxLength="9"
                android:paddingLeft="5dp"
                android:textColor="#000000"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/choosepdstatus"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/dm_router_setting_wifi_pwd_invisibale" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:weightSum="10" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:gravity="center"
            android:text="生效时间"
            android:textColor="#000000"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6.5"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/once_starttime"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:background="@drawable/background"
                android:gravity="center_vertical"
                android:hint="未选择"
                android:paddingLeft="5dp"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="120dp" />

    <Button
        android:id="@+id/once_ensure"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/grey"
        android:text="确定"
        android:textColor="#ffffff" />

    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/once_delete"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/red_delete"
        android:text="删除已有单次密码"
        android:textColor="#ffffff" />
    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/btn_share_password"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/grey"
        android:enabled="false"
        android:text="短信分享"
        android:textColor="#ffffff" />

</LinearLayout>