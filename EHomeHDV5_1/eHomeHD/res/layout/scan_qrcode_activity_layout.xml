<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/modul_content_level"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:gravity="center_horizontal">
    
    <ImageView
        android:id="@+id/scan_qrcode_iv"
        android:layout_marginTop="50dp"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:background="@drawable/scan_qrcode_pad_imagview"/>
    <TextView
        android:id="@+id/scan_qrcode_tv"
        android:layout_margin="40sp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="20sp"
        android:textColor="#222222"
        android:text="授权智能家居HD版登录此网关"/>
    <Button
        android:background="@drawable/scan_qrcode_button_bg"
        android:id="@+id/scan_qrcode_login_bt"
        android:text="@string/login_login"
        android:textSize="25sp"
        android:layout_width="200dp" 
        android:layout_height="45dp"/>
    
</LinearLayout>