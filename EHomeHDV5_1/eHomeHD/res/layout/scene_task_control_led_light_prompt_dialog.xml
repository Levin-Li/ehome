<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:background="#55000000"
	android:orientation="vertical"
	android:gravity="center">

	<LinearLayout
		android:layout_width="280dp"
		android:layout_height="200dp"
		android:orientation="vertical"
		android:background="@drawable/scene_task_control_led_light_prompt_dialog_bg">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="150dp"
		android:orientation="vertical"
		>
		<TextView
			android:id="@+id/device_led_colorful_time_tv"
			android:layout_width="match_parent"
			android:layout_height="40dp"
			android:gravity="center_horizontal|bottom"
			android:textColor="#6EA31D"
			android:textSize="18sp"
			android:text="@string/set_desk_format_dialog_title"
			/>

		<TextView
			android:layout_width="match_parent"
			android:layout_height="110dp"
			android:gravity="center"
			android:textColor="#3E3E3E"
			android:textSize="15sp"
			android:text="@string/led_rainbow_housekeeper_set_hint"/>
	</LinearLayout>

	<View
		android:layout_width="match_parent"
		android:layout_height="1px"
		android:background="@color/v5_gray_font" />

	<TextView
		android:id="@+id/device_led_colorful_time_prompt"
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:gravity="center"
		android:textColor="#6EA31D"
		android:textSize="18sp"
		android:text="@string/more_i_see"
		/>

	</LinearLayout>

</LinearLayout>
