<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <cc.wulian.smarthomev5.view.DropDownListView
            android:id="@+id/social_infos"
            style="@style/CMWidget.Listview.UnClickable"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/trant"
            android:dividerHeight="3dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            tools:listitem="@layout/item_social_info" >
        </cc.wulian.smarthomev5.view.DropDownListView>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_gravity="bottom" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:orientation="horizontal"
            android:weightSum="6" >

            <EditText
                android:id="@+id/social_content"
                android:layout_width="0dp"
                android:paddingLeft="2dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="17dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="17dp"
                android:layout_weight="4.7"
                android:background="@drawable/fragment_message_history_input"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:textColor="#393939"
                android:textCursorDrawable="@null"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/publish_info"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="17dp"
                android:layout_marginLeft="21dp"
                android:layout_marginRight="21dp"
                android:layout_marginTop="17dp"
                android:layout_weight="1.3"
                android:background="@drawable/fragment_message_history_from_me"
                android:gravity="center"
                android:text="@string/home_return_message_btn_send"
                android:textColor="#ffffff"
                android:textSize="16sp" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>